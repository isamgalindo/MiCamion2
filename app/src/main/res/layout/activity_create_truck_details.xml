<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateTruckDetails">
    <LinearLayout
        android:id="@+id/linearLayoutAboveScroll"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:gravity="center">
    >

        <TextView
            android:id="@+id/createLoadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create truck"
            style="@style/Titles"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Details"
            style="@style/Titles"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="8dp"
            android:scaleY="2"
            android:theme="@style/ProgressBarStyle" />

    </LinearLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutAboveScroll"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Model"
            android:padding="8dp"
            />


        <EditText
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Brand"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/plates"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Plates"
            android:padding="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/loadWeight"
                android:layout_width="270dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                style="@style/EditTexts"
                android:layout_marginRight="8dp"
                android:drawablePadding="8dp"
                android:hint="Weight Capacity"
                android:padding="8dp"
                />

            <Spinner
                android:id="@+id/weightSpinner"
                style="@style/EditTexts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edittext"
                android:ellipsize="marquee"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#000000"
                android:textSize="18sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/loadVolume"
                android:layout_width="270dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                style="@style/EditTexts"
                android:drawablePadding="8dp"
                android:hint="Volume Capacity"
                android:inputType="text"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                />

            <Spinner
                android:id="@+id/volumeSpinner"
                style="@style/EditTexts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edittext"
                android:ellipsize="marquee"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#000000"
                android:textSize="18sp"


                />

        </LinearLayout>
        <Spinner
            android:id="@+id/typeSpinner"
            style="@style/EditTexts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/custom_edittext"
            android:ellipsize="marquee"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/driver"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Model"
            android:padding="8dp"
            />

    </LinearLayout>
</ScrollView>


    <Button
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        style="@style/Buttons"
        android:text="Next"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>