<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminTrucks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/trucks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            android:text="Trucks"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/triphistorybutton2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/Deepblue"
            android:text="Company Trip History"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tripId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABS342"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand: Volskwagen"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model: Delivery 9.170"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/LoadCapacity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Capacity: 3 tons"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/Insurance1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insurance Expiration: Aug-03-2023"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tripid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XWD768"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand: Volskwagen"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/model2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model: Delivery 2.340"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/LoadCapacity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Capacity: 5 tons"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/Insurance2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insurance Expiration: Dic-08-2024"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tripid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDS990"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/startdate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand: Nissan"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/model3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model: Cargo MS10"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:id="@+id/descriptionSend3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Capacity: 4.5 tons"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/descriptionSend4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insurance Expiration: Sep-10-2023"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    android:textStyle="normal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>