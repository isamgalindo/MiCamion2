<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TruckCompleteDetails">


    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <TextView
            android:id="@+id/TruckDetailsText"
            style="@style/Titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Load details"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/detailsText"
            style="@style/Titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Details"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/modelReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/driverReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/weightReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/volumeReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/location"
            style="@style/Titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Location"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/truckPickUpReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/truckDropOffReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/dateReview"
            style="@style/Titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Date"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/startDateReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/endDateReview"
            style="@style/Texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/okButton"
            style="@style/Buttons"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="OK"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>