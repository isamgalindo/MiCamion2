<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateLoadDetailsView">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24"
        android:layout_gravity="start|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/floatingActionButton"
        app:layout_constraintTop_toBottomOf="@id/floatingActionButton"
        >

        <TextView
            android:id="@+id/createLoadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create Load"
            style="@style/Texts"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Details"
            style="@style/Texts"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="8dp"
            android:scaleY="2"
            android:theme="@style/ProgressBarStyle" />

        <EditText
            android:id="@+id/loadName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Load Name"
            android:padding="8dp"
             />


        <EditText
            android:id="@+id/loadType"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            style="@style/EditTexts"
            android:drawablePadding="8dp"
            android:hint="Load type"
            android:padding="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Weight"
                android:layout_width="270dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                style="@style/EditTexts"
                android:layout_marginRight="8dp"
                android:drawablePadding="8dp"
                android:hint="Weight"
                android:padding="8dp"
                 />

            <Spinner
                android:id="@+id/weightSpinner"
                style="@style/EditTexts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edittext"
                android:ellipsize="marquee"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#000000"
                android:textSize="18sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Volume"
                android:layout_width="270dp"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                style="@style/EditTexts"
                android:drawablePadding="8dp"
                android:hint="Volume"
                android:inputType="text"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                 />

            <Spinner
                android:id="@+id/volumeSpinner"
                style="@style/EditTexts"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/custom_edittext"
                android:ellipsize="marquee"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#000000"
                android:textSize="18sp"


                />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        style="@style/Buttons"
        android:text="Next"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>